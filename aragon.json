{
  "name": "Aragon Token Distribution",
  "context": {
    "budget": "number",
    "token": "string"
  },
  "item": {
    "address": "ethereumAddress",
    "amount": "scoreRealized",
    "token": "context.token"
  },
  "operate": [
    {
      "run": "return (val / context.totalPraiseScore) * context.budget;",
      "on": "amount"
    }
  ],
  "each": "item.token = context.token; return item;"
}
